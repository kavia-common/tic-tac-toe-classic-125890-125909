<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_turn_default"
        android:textColor="@color/primary"
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/status_content_desc" />

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alignmentMode="alignMargins"
        android:columnCount="3"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/cell0"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_1_desc" />

        <Button
            android:id="@+id/cell1"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_2_desc" />

        <Button
            android:id="@+id/cell2"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_3_desc" />

        <Button
            android:id="@+id/cell3"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_4_desc" />

        <Button
            android:id="@+id/cell4"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_5_desc" />

        <Button
            android:id="@+id/cell5"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_6_desc" />

        <Button
            android:id="@+id/cell6"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_7_desc" />

        <Button
            android:id="@+id/cell7"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_8_desc" />

        <Button
            android:id="@+id/cell8"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cell_bg"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/secondary"
            android:contentDescription="@string/cell_9_desc" />

    </GridLayout>

    <Button
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart_game"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:contentDescription="@string/restart_game" />

</LinearLayout>
